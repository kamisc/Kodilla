import java.io.File;
import java.io.FileNotFoundException;
import java.util.Arrays;
import java.util.Scanner;

public class ExerciseText {
		
	public static void main(String[] args) throws FileNotFoundException {
		// "C:\\Users\\Dell\\Desktop\\plik.txt"
		
		// System.out.println(fileReader("C:\\Users\\Dell\\Desktop\\plik.txt"));
		
    System.out.println("Number of words in text: " + numberOfWords(fileReader("C:\\Users\\Dell\\Desktop\\plik.txt")));
		
    // splitWords(fileReader("C:\\Users\\Dell\\Desktop\\plik.txt"));
		
    compareWords(splitWords(fileReader("C:\\\\Users\\\\Dell\\\\Desktop\\\\plik.txt")));
	}
	
	public static String fileReader(String path) throws FileNotFoundException {
		File file = new File(path);
		Scanner sc = new Scanner(file);
		String fileReader = sc.nextLine();
		sc.close();
		return fileReader.toLowerCase();
	}
	
	public static int numberOfWords(String file) {
		Scanner sc = new Scanner(file);
		int count = 0;
		while(sc.hasNext()) {
			sc.next();
			count++;
		}
		sc.close();
		return count;
	}
	
	public static String[] splitWords(String file) {
		Scanner sc = new Scanner(file);
		String[] splitedArray = null;
		splitedArray = file.split(" ");
		return splitedArray;	
	}
	
	public static void compareWords(String[] array) {
		Arrays.sort(array);
		String word = "";
		int count = 0;
		for(int i = 0; i < array.length; i++) {
			word = array[i];
			for(int j = 0; j < array.length-1; j++) {
				String word2 = array[j];
				if(word.equals(word2)) {
					count++;
				}
			}
		System.out.println(word + " " + count);
		}	
	}

}
